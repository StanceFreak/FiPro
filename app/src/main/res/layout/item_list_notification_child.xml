<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginTop="10dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp">

        <TextView
            android:id="@+id/tv_notif_subgroup_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Judul notifikasi"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:fontFamily="@font/os_semibold"/>

        <TextView
            android:id="@+id/tv_notif_subgroup_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_notif_subgroup_title"
            android:layout_marginTop="3dp"
            android:text="Pesan notifikasi"
            android:textSize="12sp"
            android:textColor="@color/black"
            android:fontFamily="@font/os_regular"/>

        <TextView
            android:id="@+id/tv_notif_subgroup_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:text="40m ago"
            android:textSize="12sp"
            android:textColor="@color/black"
            android:fontFamily="@font/os_regular"/>
        
    </RelativeLayout>

    <View
        android:id="@+id/view_home_header_line"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/white_2"/>

</LinearLayout>