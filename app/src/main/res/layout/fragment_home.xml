<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".views.home.HomeFragment">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar_home_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        app:elevation="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_home_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="?attr/actionBarSize"
            android:theme="?attr/actionBarTheme"
            app:layout_scrollFlags="scroll|enterAlways|snap">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingEnd="10dp">

                <TextView
                    android:id="@+id/tv_home_header_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:text="Montor Kobong"
                    android:textSize="20sp"
                    android:textColor="@color/grey"
                    android:fontFamily="@font/cg_bold"/>

                <ImageView
                    android:id="@+id/iv_home_header_notif"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_notif"/>

            </RelativeLayout>

        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <View
        android:id="@+id/view_home_header_line"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        app:layout_constraintTop_toBottomOf="@id/appbar_home_header"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@color/white_2"/>

   <androidx.constraintlayout.widget.ConstraintLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       app:layout_constraintTop_toBottomOf="@id/view_home_header_line"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintBottom_toBottomOf="parent">

       <RelativeLayout
           android:id="@+id/rl_home_header_container"
           android:layout_width="match_parent"
           android:layout_height="0dp"
           app:layout_constraintTop_toTopOf="parent"
           app:layout_constraintEnd_toEndOf="parent"
           app:layout_constraintStart_toStartOf="parent"
           android:background="@color/white"
           android:paddingTop="10dp"
           android:paddingHorizontal="10dp">

           <TextView
               android:id="@+id/tv_home_header_status"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_centerHorizontal="true"
               android:layout_alignParentTop="true"
               android:text="Online for 1 days, 32 minutes, 13 seconds."
               android:textSize="14sp"
               android:textColor="@color/grey"
               android:fontFamily="@font/os_medium"/>

           <TextView
               android:id="@+id/tv_home_header_prometheus_label"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_below="@id/tv_home_header_status"
               android:layout_marginTop="5dp"
               android:text="Prometheus is running :"
               android:textColor="@color/grey"
               android:textSize="14sp"
               android:textStyle="bold"
               android:fontFamily="@font/os_medium"
               android:layout_centerHorizontal="true"/>

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_below="@id/tv_home_header_prometheus_label"
               android:paddingHorizontal="10dp"
               android:layout_marginTop="5dp"
               android:orientation="horizontal">

               <com.google.android.material.button.MaterialButton
                   android:id="@+id/btn_home_header_shutdown"
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:layout_weight="1"
                   android:backgroundTint="@color/red"
                   android:textAllCaps="false"
                   android:text="Stop"
                   android:textSize="14sp"
                   android:fontFamily="@font/cg_bold"
                   app:cornerRadius="10dp"/>

               <View
                   android:layout_width="0dp"
                   android:layout_height="0dp"
                   android:layout_weight="0.2"/>

               <com.google.android.material.button.MaterialButton
                   android:id="@+id/btn_home_header_reboot"
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:layout_weight="1"
                   android:backgroundTint="@color/yellow"
                   android:textAllCaps="false"
                   android:text="Restart"
                   android:textSize="14sp"
                   android:fontFamily="@font/cg_bold"
                   app:cornerRadius="10dp"/>

           </LinearLayout>

       </RelativeLayout>

       <com.google.android.material.tabs.TabLayout
           android:id="@+id/tl_home_container"
           android:layout_width="match_parent"
           android:layout_height="0dp"
           android:background="@color/white"
           app:layout_constraintEnd_toEndOf="parent"
           app:layout_constraintStart_toStartOf="parent"
           app:layout_constraintTop_toBottomOf="@id/rl_home_header_container"
           app:tabIndicatorColor="@color/grey"
           app:tabSelectedTextAppearance="@style/TabTextSelected"
           app:tabSelectedTextColor="@color/grey"
           app:tabTextAppearance="@style/TabTextUnselected"
           app:tabTextColor="@color/light_grey"/>

       <androidx.viewpager2.widget.ViewPager2
           android:id="@+id/vp_home_container"
           android:layout_width="match_parent"
           android:layout_height="0dp"
           app:layout_constraintTop_toBottomOf="@id/tl_home_container"
           app:layout_constraintBottom_toBottomOf="parent"
           app:layout_constraintStart_toStartOf="parent"
           app:layout_constraintEnd_toEndOf="parent"/>

