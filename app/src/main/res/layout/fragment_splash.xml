<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".views.splash.SplashFragment">

    <ImageView
        android:id="@+id/iv_splash_logo"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:src="@drawable/ic_logo_splash"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/tv_splash_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Montor Kobong"
        app:layout_constraintTop_toBottomOf="@id/iv_splash_logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="7dp"
        android:fontFamily="@font/os_bold"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/tv_splash_sub_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Server Monitored, Kobongan Prevented!"
        app:layout_constraintTop_toBottomOf="@id/tv_splash_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/os_semibold"
        android:textSize="16sp"/>


</androidx.constraintlayout.widget.ConstraintLayout>